# запуск терминала
super + Escape
    alacritty

# запуск dmenu
super + p
    dmenu_path | dmenu | fish

# калькулятор
super + c
    printf "" | dmenu -c -p calc | xargs -I[] fish -c "math '[]'" | xargs notify-send

# scratchpad терминал
super + n
    exec $HOME/.config/bspwm/bspwm-scratchpad.sh --class "scratchpad-term"   --command "alacritty --class scratchpad-term"

# aichat
super + a
    exec $HOME/.config/bspwm/bspwm-scratchpad.sh --class "scratchpad-aichat" --command "alacritty --class scratchpad-aichat -e fish -i -c aichat"

# показать или скрыть системный трей
super + t
    exec $HOME/.config/bspwm/bspwm-showhide.sh "stalonetray"

# вебка
super + w
    exec $HOME/.config/bspwm/bspwm-webcam.sh

# вставить текст из буфера
shift + Insert
    clipmenu && sleep 0.5 && xclip -o | xdotool type --clearmodifiers --file -

# вставить текст из сниппета
alt + shift + Insert
    snip load

super + semicolon
    keynav
